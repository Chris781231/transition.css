@import '../../vars.styl'
@import '../../basic.styl'

+keyframes(ldt-blur-out)
  0%
    filter: blur(0)
    opacity: 1
  10%
    filter: blur(0)
    opacity: 1
  100%
    filter: blur(5px)
    opacity: 0

.ldt-blur-out
  filter: blur(0)
  opacity: 1
  animation(ldt-blur-out 1s cubic-bezier(0,0.5,0.5,1) forwards)
