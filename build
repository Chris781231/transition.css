#!/usr/bin/env bash
mkdir -p dist

echo "build src/ctrl.styl -> dist/ctrl.css ..."
./node_modules/.bin/stylus -p src/ctrl.styl > dist/ctrl.css
echo "build animations..."
./node_modules/.bin/lsc tool/build-css.ls > dist/main.css

echo "merge css files into transition.css..."
cat dist/ctrl.css dist/main.css > dist/transition.css
echo "minifying transition.css ..."
./node_modules/.bin/uglifycss dist/transition.css > dist/transition.min.css
echo "zipping..."
zip -r dist/transition-css.zip dist/transition.min.css
echo "clean up intermediate files..."
rm dist/ctrl.css dist/main.css

echo "done."


