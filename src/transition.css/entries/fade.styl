@import '../../vars.styl'
@import '../../basic.styl'

+keyframes(ldt-fade-in)
  0%
    opacity: 0
  100%
    opacity: 1

.ldt-fade-in
  opacity: 0
  animation(ldt-fade-in 1s forwards)
  animation-timing-function: cubic-bezier(0,0.3,0.7,1)

.ldt-fade-out
  opacity: 1
  animation(ldt-fade-in 1s forwards)
  animation-direction: reverse
  animation-timing-function: cubic-bezier(0.3,0,1,0.7)
