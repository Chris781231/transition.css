@import '../../vars.styl'
@import '../../basic.styl'

+keyframes(ldt-power-off)
  0%, 20%, 100%
    animation-timing-function: cubic-bezier(0,.5,.5,1)
  0%
    transform(scale(1,1))
  20%
    transform(scale(1,0.1))
  100%
    transform(scale(0.05,0.05))

.ldt-power-off
  transform(scale(1,1))
  animation(ldt-power-off 1s forwards)
