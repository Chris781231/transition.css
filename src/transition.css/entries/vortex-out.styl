@import '../../vars.styl'
@import '../../basic.styl'

+keyframes(ldt-vortex-out)
  0%
    transform: rotate(0deg) scale(1)
    opacity: 1
  100%
    transform: rotate(1800deg) scale(3)
    opacity: 0

.ld.ldt-vortex-out
  animation(ldt-vortex-out 1s infinite)
  animation-timing-function: cubic-bezier(0,.5,.5,1)
